        const closeModal = document.getElementById('closeModal');
        const closeVerifyModal = document.getElementById('closeVerifyModal');
        const closeSuccess = document.getElementById('closeSuccess');
        const closeError = document.getElementById('closeError')
        const orderForm = document.getElementById('orderForm');
        const verifyForm = document.getElementById('verifyForm');
        const modalSize = document.getElementById('modalSize');
        const modalDistrict = document.querySelector('.modalDistrict');
        const verificationCode = document.getElementById('verificationCode');
        const codeError = document.getElementById('codeError');
        
        // let attempts = 0;
        // const correctCode = '1111';

        // Open order modal when clicking "Обрати"
        document.querySelectorAll('[id^="price"]').forEach(priceEl => {
            // const containerSize = priceEl.id.replace('price', '').replace('m3', '');
            const containerSize = priceEl.id.replace('price', '').replace('m3', '');
            
            priceEl.closest('.bg-white').querySelector('.choose-plan').addEventListener('click', () => {
                modalDistrict.innerHTML = ''
                districtOptions.forEach(o => {
                    modalDistrict.appendChild(o.cloneNode(true))
                })
                modalSize.value = `${containerSize} m³ (${basePrice[containerSize === "8" ? 0 : containerSize === "15" ? 1 : 2]})`;
                orderModal.classList.remove('hidden');

                modalDistrict.addEventListener('change', () => {
                    modalSize.value = `${containerSize} m³ (${basePrices[modalDistrict.value][containerSize === "8" ? 0 : containerSize === "15" ? 1 : 2]})`
                })
            });
        });

        closeModal.addEventListener('click', () => orderModal.classList.add('hidden'));
        // closeVerifyModal.addEventListener('click', () => verifyModal.classList.add('hidden'));
        closeSuccess.addEventListener('click', () => successMessage.classList.add('hidden'));
        closeError.addEventListener('click', () => errorMessage.classList.add('hidden'));

        // // Handle order form submission
        orderForm.addEventListener('submit', async (e) => {
            e.preventDefault();
            orderModal.classList.add('hidden');

            const formData = new FormData(orderForm);
            try {
                const res = await fetch('/newBid', {
                    method: 'POST',
                    body: formData
                });

                if (res.status === 429) {
                    errorMessage.classList.remove('hidden');
                    return;
                }

                if (res.ok) {
                    successMessage.classList.remove('hidden');
                } else {
                    // Любой другой статус — показать ошибку
                    errorMessage.classList.remove('hidden');
                }
            } catch (err) {
                // Например, сервер не доступен
                errorMessage.classList.remove('hidden');
                console.error('Ошибка запроса:', err);
            }
            
        });

