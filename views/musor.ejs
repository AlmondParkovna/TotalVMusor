            <script>
                const districtSelector = document.querySelector('.district-selector')
                const sizeSlider = document.querySelector('.sizeSlider');
                const sizeValue = document.querySelector('.sizeValue');
                const calculatedPrice = document.querySelector('.calculatedPrice');
                
                let price;
                

                // Base prices per district
                const basePrices = {
                    'Центр': [3500, 5000, 7000],
                    'Черемушки': [3500, 5000, 7000],
                    'Слобідка': [3500, 5000, 7000],
                    'Ленпас': [3500, 5000, 7000],
                    'Таїрове': [3500, 5000, 7000],
                    'Фонтан': [3500, 5000, 7000],

                    'Совіньйон': [3800, 5500, 8000],
                    'Пос. Котовського': [3800, 5500, 8000],
                    'Крижанівка': [3800, 5500, 8000],
                    'Фонтанка': [3800, 5500, 8000],

                    'Чорноморськ': [5000, 6500, 9000]
                };
                let basePrice
                let districtOptions = []
                // Adding options to district selector in calculator
                Object.keys(basePrices).forEach(key => {
                    const option = document.createElement("option");
                    option.textContent = key;
                    districtSelector.appendChild(option);
                    districtOptions.push(option)
                })


                // Store selected values globally
                let selectedDistrict = 'Центр';
                const values = [8, 15, 30]

                function updatePrices() {
                    selectedDistrict = districtSelector.value;
                    basePrice = basePrices[selectedDistrict];
                    
                    // Update calculator price
                    let size = values[parseInt(sizeSlider.value)]

                    
                    // sizeSlider.value = size;
                    sizeValue.innerHTML = size;
                    price = basePrice[size === 8 ? 0 : size === 15 ? 1 : 2]
                    calculatedPrice.textContent = `${price}`;
                    
                    
                    document.querySelector('.price8m3').textContent = basePrice[0];
                    document.querySelector('.price15m3').textContent = basePrice[1];
                    document.querySelector('.price30m3').textContent = basePrice[2];
                    
                    // Also update the modal display values
                    modalDistrict.value = selectedDistrict;
                    modalSize.value = `${size} м³ (${price})`;
                }

                // Initialize prices on load
                document.addEventListener('DOMContentLoaded', function() {
                    updatePrices();
                });
                
                sizeSlider.addEventListener('input', function () {
                    updatePrices()
                });

                
                districtSelector.addEventListener('change', () => updatePrices())
                
